<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activity.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CreateItem"
        android:id="@+id/buttonCreateItemMain"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp" />

        android:text="@string/create_item"
        android:id="@+id/buttonCreateItemMain" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonCreateItemMain"
        android:text="@string/create_repas_main"
        android:id="@+id/buttonCreateRepasMain" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See items"
        android:id="@+id/buttonSeeItems"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/buttonCreateItemMain"
        android:layout_toEndOf="@+id/buttonCreateItemMain" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show all meals"
        android:id="@+id/buttonShowMeals"
        android:layout_below="@+id/buttonCreateItemMain"
        android:layout_toRightOf="@+id/buttonCreateItemMain"
        android:layout_toEndOf="@+id/buttonCreateItemMain" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statistics"
        android:id="@+id/buttonStatistics"
        android:layout_below="@+id/buttonShowMeals"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Fb"
        android:id="@+id/buttonFirebase"
        android:layout_below="@+id/buttonStatistics"
        android:layout_toRightOf="@+id/buttonStatistics"
        android:layout_toEndOf="@+id/buttonStatistics"
        android:layout_marginTop="48dp" />

</RelativeLayout>
